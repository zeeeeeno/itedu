<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "HTTP://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="aggressiveLazyLoading" value="false"/>
        <setting name="jdbcTypeForNull" value="NULL"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="callSettersOnNulls" value="true"/>
        <setting name="defaultStatementTimeout" value="25"/>
    </settings>

    <typeAliases>
        <typeAlias alias="CamelCaseMap" type="com.gsitm.career.mybatis.type.CamelCaseMap"/>
        <typeAlias alias="LectureDTO" type="com.gsitm.career.dto.LectureDTO"/>
        <typeAlias alias="AcademyDTO" type="com.gsitm.career.dto.AcademyDTO"/>
        <typeAlias alias="MemberDTO" type="com.gsitm.career.dto.MemberDTO"/>
        <typeAlias alias="NoticeDTO" type="com.gsitm.career.dto.NoticeDTO"/>
        <typeAlias alias="CommentsDTO" type="com.gsitm.career.dto.CommentsDTO"/>
        <typeAlias alias="ClassesDTO" type="com.gsitm.career.dto.ClassesDTO"/>
    </typeAliases>

    <typeHandlers>
        <typeHandler handler="com.gsitm.career.mybatis.type.BooleanNullableTypeHandler" javaType="java.lang.Boolean"/>
    </typeHandlers>

</configuration>